{
  "name": "twisted-fate",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@twisted-fate/playground-web",
    "dev:api": "npm run start:dev --workspace=@twisted-fate/playground-api",
    "build:web": "npm run build --workspace=@twisted-fate/playground-web",
    "build:api": "npm run build --workspace=@twisted-fate/playground-api",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
